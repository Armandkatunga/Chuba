<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegesterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_margin="0dp"/>


        <EditText
            android:id="@+id/email_field"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn_cgray"
            android:textSize="14dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_mail_white_24dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/password_field"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn_cgray"
            android:textSize="14dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/confirm_password_field"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn_cgray"
            android:textSize="14dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/sign_up"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn_cred"
            android:textColor="@color/cwhite"
            android:paddingRight="20dp"
            android:text="Sign up"
            android:drawableRight="@drawable/ic_send_black_24dp"/>


        <TextView
            android:id="@+id/go_back"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Already Have an account ."
            android:gravity=""
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>